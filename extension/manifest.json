{
  "manifest_version": 3,
  "name": "Bookmark Processor",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:5001/*",
    "http://192.168.86.100:5001/*",
    "http://172.245.131.124:5001/*",
    "http://192.168.86.191:5001/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": ["styles.css"],
    "matches": ["<all_urls>"]
  }]
}